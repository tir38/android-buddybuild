<resources>

    <!-- THEMES -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bb_light_blue</item>
        <item name="colorPrimaryDark">@color/bb_dark_blue</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="android:background">@color/bb_background_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- STYLES -->
    <style name="BuildDetailTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/bb_light_blue</item>
    </style>

    <style name="BuildDetailKeyText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BuildDetailValueText">
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteTextInputAccents">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="textColorError">@color/bb_dark_blue</item>
    </style>

</resources>
